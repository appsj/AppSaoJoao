<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_calendar"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="2dp"
    android:elevation="0dp"
    android:padding="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="6dp">
        >


        <ImageView
            android:id="@+id/img_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:background="@drawable/frame_fds" />

        <TextView
            android:id="@+id/item_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dia_normal"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Segunda"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_txt_title"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_txt_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="30"
                android:textColor="@android:color/white"
                android:textSize="34sp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>