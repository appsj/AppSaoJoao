<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.group.uni.sojoo2018.activities.telaAtracoes.TelaAtracoes"
    tools:showIn="@layout/activity_tela_atracoes">


    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speedView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@mipmap/icon512a"

        android:elevation="8dp"
        android:pointerIcon="arrow"
        android:soundEffectsEnabled="true"
        app:sv_backgroundCircleColor="@color/bgcircle"
        app:sv_centerCircleColor="@color/hoje"
        app:sv_highSpeedColor="@android:color/holo_red_light"
        app:sv_indicator="NormalSmallIndicator"
        app:sv_indicatorColor="@color/cardview_light_background"
        app:sv_lowSpeedColor="?attr/colorAccent"
        app:sv_lowSpeedPercent="40"
        app:sv_maxSpeed="30"
        app:sv_mediumSpeedColor="@android:color/holo_orange_light"
        app:sv_minSpeed="0"
        app:sv_speedTextColor="@color/transparente"
        app:sv_speedometerMode="NORMAL"
        app:sv_speedometerWidth="50dp"
        app:sv_textColor="@color/cardview_light_background"
        app:sv_trembleDegree="2"
        app:sv_unitSpeedInterval="20dp"
        app:sv_unitTextColor="@color/transparente" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/speedView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/frame"
        android:backgroundTint="?attr/colorAccent"
        android:elevation="8dp"
        android:text="18/30"
        android:textColor="@color/active_indicator"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageView12"
        android:layout_below="@+id/imageView12"
        android:layout_marginStart="11dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/yawning" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/speedView2"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="150dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/emo1" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageView11"
        android:layout_below="@+id/imageView15"
        android:elevation="10dp"
        app:srcCompat="@drawable/ginger" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView15"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/imageView13"
        android:elevation="10dp"
        app:srcCompat="@drawable/ginger" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/speedView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/happy" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView14"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView9"
        android:elevation="10dp"
        app:srcCompat="@drawable/rich" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView15"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageView15"
        android:elevation="10dp"
        app:srcCompat="@drawable/flirt" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/speedView2"
        android:layout_alignTop="@+id/imageView12"
        android:layout_marginEnd="11dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/flirt" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView15"
        android:elevation="10dp"
        app:srcCompat="@drawable/crazy" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView14"
        android:background="@drawable/shape_azul"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="32dp"
            android:elevation="2dp"
            android:padding="50dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="12dp"
                    android:elevation="5dp"
                    android:src="@drawable/gleisson"
                    app:srcCompat="@drawable/gleisson" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView10"
                    android:layout_marginTop="8dp"
                    android:elevation="5dp"
                    android:padding="12dp"
                    android:text="Eita gota! Ninguém segura o homem, já bateu ponto 18 vezes"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/imageView10"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@+id/imageView10"
                    android:elevation="5dp"
                    android:gravity="center_vertical"
                    android:text="Gleisson Michael"
                    android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="68dp"
            android:elevation="5dp"
            android:text="Compartilhar"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
